<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">48dp</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PathBarProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:maxHeight">@dimen/path_bar_progress_size</item>
        <item name="android:minHeight">@dimen/path_bar_progress_size</item>
        <item name="android:minWidth">@dimen/path_bar_progress_size</item>
        <item name="android:maxWidth">@dimen/path_bar_progress_size</item>
    </style>
</resources>